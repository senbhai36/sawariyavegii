  <h2>ğŸ“‹ Orders List</h2>
  <table border="1" width="100%" cellpadding="10" id="orderTable">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
